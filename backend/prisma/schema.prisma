// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Category {
  categoryID   Int      @id @default(autoincrement())
  categoryCode String   @unique
  name         String
  description  String?
  status       Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Supplier {
  supplierID    Int      @id @default(autoincrement())  // Primary key with auto-increment
  supplierName  String                                // Name of the supplier
  description   String?                               // Optional description
  status        Boolean   @default(true)               // Status (e.g., active/inactive)
  createdByID   Int                                    // ID of the user who created this supplier
  modifiedByID  Int?                                   // ID of the user who last modified this supplier
  createdAt     DateTime  @default(now())              // Timestamp for when the supplier was created
  updatedAt     DateTime  @updatedAt                   // Timestamp for when the supplier was last updated
}
